@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AgroCom Admin</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
            display: flex;

            align-items: center;
            height: 100vh;
            flex-direction: column;
        }

        h1 {
            text-align: center;
            color: #333;
            font-size: 2.5rem;
            margin: 0;
        }

        .btn {
            display: inline-block;
            margin: 10px;
            padding: 15px 30px;
            font-size: 1rem;
            font-weight: bold;
            text-decoration: none;
            color: #fff;
            border: none;
            border-radius: 50px;
            background-image: linear-gradient(90deg, #56ab2f, #a8e063);
            transition: transform 0.3s ease, background-image 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

            .btn:hover {
                transform: translateY(-5px);
                background-image: linear-gradient(90deg, #56ab2f, #a8e063);
            }

        .btn-danger {
            background-image: linear-gradient(90deg, #56ab2f, #a8e063);
        }
    </style>
</head>
<body>

    <h1>Welcome To AgroCom Admin</h1>

    <a asp-controller="Admin" asp-action="Yangilik" class="btn btn-danger">Yangiliklar</a>
    <a asp-controller="Admin" asp-action="Photo" class="btn btn-danger">Rasmlar</a>
    <a asp-controller="Admin" asp-action="ProOne" class="btn btn-danger">Ximoya</a>
    <a asp-controller="Admin" asp-action="ProTwo" class="btn btn-danger">Ogit</a>

</body>
</html>
