@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using AgroAdmin.Models.Foundations.ProductTwos

@model IQueryable<ProductTwo>

@{
    ViewData["Title"] = "O'g'itlar Ro'yxati";
    int serialNumber = 1;
}

<div class="container">
    <div class="header">
        <h1>@ViewData["Title"]</h1>
        <a asp-controller="Admin" asp-action="AddProductTwo" class="btn btn-primary">Qo'shish</a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Id</th>
                <th>Title (Uz)</th>
                <th>Title (Ru)</th>
                <th>Name (Uz)</th>
                <th>Name (Ru)</th>
                <th>Short Description (Uz)</th>
                <th>Short Description (Ru)</th>
                <th>Full Description (Uz)</th>
                <th>Full Description (Ru)</th>
                <th>Active Ingredient (Uz)</th>
                <th>Active Ingredient (Ru)</th>
                <th>Product Picture</th>
                <th>Product Icon</th>
                <th>Product Type</th>
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int index = 1;
                foreach (var product in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@product.Id</td>
                        <td>@product.TitleUz</td>
                        <td>@product.TitleRu</td>
                        <td>@product.NameUz</td>
                        <td>@product.NameRu</td>
                        <td>@product.DesUz</td>
                        <td>@product.DesRu</td>
                        <td>@product.DescriptionUZ</td>
                        <td>@product.DescriptionRu</td>
                        <td>@product.SarfUz</td>
                        <td>@product.SarfRu</td>
                        <td>
                            <img src="@product.ProductPicture" alt="Product Picture" width="50" height="50">
                        </td>
                        <td>
                            <img src="@product.ProductIcon" alt="Product Icon" width="30" height="30">
                        </td>
                        <td>@product.ProductTwoType</td>
                        <td>
                            <a asp-controller="Admin" asp-action="JadvalIkki" asp-route-id="@product.Id" class="btn btn-success modern-btn">Jadval</a>
                            <a asp-controller="Admin" asp-action="UpdateProductTwo" asp-route-id="@product.Id" class="btn btn-warning modern-btn">Tahrirlash</a>
                            <form asp-action="DeleteProductTwo" asp-route-id="@product.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this news item?');">
                                <button type="submit" class="btn btn-danger btn-sm modern-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="16" class="text-center">No products available</td>
                </tr>
            }
        </tbody>
    </table>
</div>
