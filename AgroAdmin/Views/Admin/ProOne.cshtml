@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using AgroAdmin.Models.Foundations.ProductOnes

@model IQueryable<ProductOne>

@{
    ViewData["Title"] = "Mahsulotlar Ro'yxati";
    int serialNumber = 1; 
}

<div class="container">
    <div class="header">
        <h1>@ViewData["Title"]</h1>
        <a asp-controller="Admin" asp-action="AddProductOne" class="btn btn-primary">Mahsulot Qo'shish</a> <!-- Add Product Button -->
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>#</th> 
                <th>Id</th>
                <th>Nom (Uz)</th>
                <th>Nom (Ru)</th>
                <th>Tavsif (Uz)</th>
                <th>Tavsif (Ru)</th>
                <th>TavsifTo'liq (Uz)</th>
                <th>TavsifTo'liq (Ru)</th>
                <th>Tasir Modda (Uz)</th>
                <th>Tasir Modda (Ru)</th>
                <th>Kimyoviy Sinfi (Uz)</th>
                <th>Kimyoviy Sinfi (Ru)</th>
                <th>Preparat Shakli (Uz)</th>
                <th>Preparat Shakli (Ru)</th>
                <th>Qadogi (Uz)</th>
                <th>Qadogi (Ru)</th>
                <th>Icon URL</th>
                <th>Rasm</th>
                <th>Mahsulot Turi</th>
                <th>Qo'shimcha (O'zbekcha)</th>
                <th>Qo'shimcha (Ruscha)</th>
                <th>Amallar</th> <!-- Actions -->
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@serialNumber</td> <!-- Display serial number -->
                    <td>@product.Id</td>
                    <td>@product.TitleUz</td> <!-- Title in Uzbek -->
                    <td>@product.TitleRu</td> <!-- Title in Russian -->
                    <td>@product.DesUz</td> <!-- Description in Uzbek -->
                    <td>@product.DesRu</td> <!-- Description in Russian -->
                    <td>@product.DescriptionUz</td> <!-- Full Description in Uzbek -->
                    <td>@product.DescriptionRu</td> <!-- Full Description in Russian -->
                    <td>@product.TasirModdaUz</td> <!-- Tasir Modda in Uzbek -->
                    <td>@product.TasirModdaRu</td> <!-- Tasir Modda in Russian -->
                    <td>@product.KimyoviySinfiUz</td> <!-- Kimyoviy Sinfi in Uzbek -->
                    <td>@product.KimyoviySinfiRu</td> <!-- Kimyoviy Sinfi in Russian -->
                    <td>@product.PreparatShakliUz</td> <!-- Preparat Shakli in Uzbek -->
                    <td>@product.PreparatShakliRu</td> <!-- Preparat Shakli in Russian -->
                    <td>@product.QadogiUz</td> <!-- Qadogi in Uzbek -->
                    <td>@product.QadogiRu</td> <!-- Qadogi in Russian -->
                    <td>
                        <img src="@product.IconUrl" alt="Icon Rasm" class="img-thumbnail" style="width: 50px; height: 50px;" />
                    </td>
                    <td>
                        <img src="@product.ProductPicture" alt="Mahsulot Rasm" class="img-thumbnail" style="width: 50px; height: 50px;" />
                    </td>
                    <td>@product.ProductType</td>
                    <td>@product.AdditionUz</td> <!-- Additional info in Uzbek -->
                    <td>@product.AdditionRu</td> <!-- Additional info in Russian -->
                    <td>
                        <a asp-controller="Admin" asp-action="JadvalBir" asp-route-id="@product.Id" class="btn btn-success modern-btn">Jadval</a>
                        <a asp-controller="Admin" asp-action="UpdateProductOne" asp-route-id="@product.Id" class="btn btn-warning modern-btn">Tahrirlash</a>
                        <form asp-action="DeleteProductOne" asp-route-id="@product.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this news item?');">
                            <button type="submit" class="btn btn-danger btn-sm modern-btn">Delete</button>
                        </form>
                    </td>

                </tr>
                serialNumber++;
                <!-- Increment the counter -->
            }
        </tbody>
    </table>
</div>
