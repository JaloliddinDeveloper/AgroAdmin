@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using AgroAdmin.Models.ViewModels
@model TableTwoPageViewModel
@{
    ViewBag.Title = "Jadval";
}

<div class="toolbar">
    <button class="toolbar-heading">@Model.ProductTwoName</button>
    <div class="toolbar-buttons">
        <a href="@Url.Action("AddJadvalIkki", "Admin", new { id = Model.ProuctTwoId })" class="btn-add-words">
            <span class="icon">+</span> Add Words
        </a>
        <a href="@Url.Action("ProTwo")" class="btn-back">Orqaga</a>
    </div>
</div>

<h1>Table Two Records</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name (Uz)</th>
            <th>Name (Ru)</th>
            <th>Foiz</th>
         @*    <th>Product Two ID</th> *@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TableTwoes)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.NameUz</td>
                <td>@item.NameRu</td>
                <td>@item.Foiz</td>
              @*   <td>@item.ProductTwoId</td> *@
                <td>
                    <a href="@Url.Action("EditJadvalIkki", "Admin", new { id = item.Id })" class="btn btn-primary">Edit</a>
                    <form asp-action="DeleteIkki" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* General Page Styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Toolbar Styles */
    .toolbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px 20px;
        background-color: #ffffff;
        border-bottom: 2px solid #e0e0e0; /* Light grey border */
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    /* Heading button inside the toolbar */
    .toolbar-heading {
        background-color: transparent;
        color: #4a4a4a;
        font-size: 18px;
        font-weight: 700;
        border: none;
        text-transform: uppercase;
        cursor: default;
        letter-spacing: 0.5px;
    }

    /* Toolbar button styles */
    .toolbar-buttons a {
        font-size: 14px;
        font-weight: 600;
        padding: 10px 18px;
        text-decoration: none;
        border-radius: 6px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        display: inline-flex;
        align-items: center;
        color: #fff;
    }

    /* Add Words button */
    .btn-add-words {
        background-color: #007bff;
    }

        .btn-add-words:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .btn-add-words .icon {
            font-size: 18px;
            margin-right: 8px;
        }

    /* Back button */
    .btn-back {
        background-color: #f44336;
    }

        .btn-back:hover {
            background-color: #d32f2f;
        }

    /* Table Styles */
    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    thead {
        background-color: #007bff;
        color: white;
        font-weight: 600;
    }

    th, td {
        padding: 14px 18px;
        text-align: left;
        font-size: 14px;
        border-bottom: 1px solid #f1f1f1;
    }

    /* Table row hover effect */
    tbody tr:hover {
        background-color: #f7f7f7;
    }

    tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    th {
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Action Buttons */
    .btn {
        padding: 8px 16px;
        border-radius: 6px;
        font-size: 14px;
        color: white;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-danger {
        background-color: #e74c3c;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    /* Responsive Design */
    (max-width: 768px) {
        .toolbar

    {
        flex-direction: column;
        align-items: flex-start;
        text-align: left;
    }

    .toolbar-buttons a {
        margin: 5px 0;
    }

    table {
        font-size: 12px;
    }

    th, td {
        padding: 10px 12px;
    }

    }
</style>